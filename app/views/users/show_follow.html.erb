<% provide(:title, @title) %>
<div>
<%= gravatar_for @user %>
<h1><%= @user.name %></h1>
<span><%= link_to "view my profile", @user %></span>
<span><b>Microposts:</b> <%= @user.microposts.count %></b></span>
</div>
<div>
<%= render 'shared/status' %>
<% if @users.any? %>
<% @users.each do |user| %>
<%= link_to gravatar_for(user), user %>
<% end %>
<% end %>
</div>
<div>
<h3><%= @title %></h3>
<% if @users.any? %>
<%= render @users %>
<%= will_paginate %>
<% end %>
</div>
